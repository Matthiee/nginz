use GL from nginz;
use ClearBufferMask from nginz;

func update () {
}

func draw () {
	
	# Clear color buffer
	mask = ClearBufferMask.ColorBufferBit;

	# Clear depth buffer
	mask |= ClearBufferMask.DepthBufferBit;

	# Clear the color
	GL.ClearColor (0.6, 0.0, 0.4);

	# Clear the mask
	GL.Clear (mask);
}